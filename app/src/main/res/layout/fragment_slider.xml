<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SliderFragment">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/SliderFragment_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:id="@+id/SliderFragment_DotLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SliderFragment_Skip"
        android:layout_alignBottom="@dimen/dimens_xl"
        android:gravity="center"
        android:orientation="horizontal" />

    <Button
        android:id="@+id/SliderFragment_Skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:fontFamily="@font/cairo_bold"
        android:text="@string/skip"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txt_size_m" />
</RelativeLayout>